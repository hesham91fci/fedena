<div id="content-header">
  <img src="/images/attendence/attendence.png" alt="" />
  <h1>Employee Attendance</h1>
  <h3>Leave History</h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="inner-tab-menu">
  <ul>
    <%  if permitted_to? :emp_attendance,:employee_attendance %>
    <li><%= link_to 'Mini Report', :action => 'emp_attendance', :id=>@employee.id %></li>
    <% end %>
  </ul>
</div>
<div id="page-yield">
  <div class="box">

    <% remote_form_for :period ,:url=>{:action=>'update_leave_history', :id=>@employee.id}do |f| %>
     <div class="label-field-pair">
    <label for="reason">  Start Date</label>
    <div class="text-input-bg"><%= calendar_date_select_tag 'period[start_date]', 1.month.ago.to_date %></div>
    </div>
     <div class="label-field-pair">
    <label for="reason">  End Date</label>
    <div class="text-input-bg"><%= calendar_date_select_tag 'period[end_date]', Date.today %></div>
    </div>
    <div id="submit-button">
      <%=  submit_tag "â–º Go",:class=>'submit_button' %>
  </div>
    <% end %>
    
  </div>

    <div id="attendance-report">


    </div>
   
  </div>
