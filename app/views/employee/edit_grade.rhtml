<div id="content-header">
  <img src="/images/HR/show_hr.png" alt="" />
  <h1>Nastavení Zaměstnanci</h1>
  <h3>Upravit stupeň</h3>
  <div id="app-back-button">
  <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>


<div id="page-yield">

  <%- form_for :grade do |c| -%>

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
    <% unless flash[:warn_notice].nil? %>
    <div id="errorExplanation" class="errorExplanation"><%= flash[:warn_notice] %> </div>
  <% end %>

    <%= error_messages_for 'grade' %>
<div id="form-content">
    <div class="label-field-pair">
      <label for="grade_name">Jméno</label>
      <div class="text-input-bg"> <%= c.text_field :name %> </div>
    </div>

    <div class="label-field-pair">
      <label for="grade_priority">Priorita</label>
      <div class="text-input-bg"> <%= c.text_field :priority %> </div>
    </div>

    <div class="label-field-pair">
      <label for="grade_priority">Max hodiny za den</label>
      <div class="text-input-bg"> <%= c.text_field :max_hours_day %> </div>
    </div>

    <div class="label-field-pair">
      <label for="grade_priority">Max hodiny za týden</label>
      <div class="text-input-bg"> <%= c.text_field :max_hours_week %> </div>
    </div>

    <div class="label-checkbox-pair">
      <label class="status" for="status">Stav</label>
      <div id="radio-buttons">
      <%= c.radio_button  "status", "true", :checked => "checked" %>
      <label class="label_for_status" for="grade_status_true">Aktivní</label>

      <%= c.radio_button  "status", "false" %>
      <label class="label_for_status" for="grade_status_false">Neaktivní</label>
    </div>
    </div>

    <div id="submit-button">
      <%=submit_tag("► Potvrdit") %>
    </div>
</div>

  <%- end -%>



</div>