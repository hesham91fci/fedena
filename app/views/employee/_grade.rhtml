
<ul id="grade-list">
  <% unless @grades.empty? %>
    <li class="listheading"><div class="grade-name"> Aktivní Stupně</div></li>
    <% @grades.each do |g| %>
      <li class="list<%=cycle('odd', 'even')%>">
        <div class="grade-name"><%= g.name %>(<%= g.priority %>)</div>
        <div class="grade-edit"><%= link_to "Upravit", :action => "edit_grade", :id=>g.id %></div>
        <div class="grade-edit"><%= link_to "Smazat", {:action => "delete_grade", :id=>g.id}, :confirm => "Jste si jistí?" %></div>
      </li>
    <% end %>
    <% unless @inactive_grades.empty? %>
      <li class="listheading"><div class="grade-name"> Neaktivní Stupně</div></li>
      <%- @inactive_grades.each do |c| -%>
        <li class="list<%=cycle('odd', 'even')%>">
          <div class="grade-name"><%= c.name %> (<%= c.priority %>)</div>
          <div class="grade-edit"><%= link_to "Upravit", {:action => "edit_grade", :id=>c.id} %></div>
          <div class="grade-edit"><%= link_to "Smazat", {:action => "delete_grade", :id=>c.id},:confirm=>"Jste si jistí?" %></div>
        </li>
      <% end %>
    <% end %>
  <% else %>
    <p class="flash-msg"> Žádné stupně zaměstnanců nenalezeny</p>
  <% end %>
</ul>