
<ul id="position-list">
<% unless @positions.empty? %>
  <li class="listheading"> <div class="position-name">Aktivní Kvalifikace </div> </li>
  
<% @positions.each do |p| %>
  <li class="list<%=cycle('odd', 'even')%>">
    <div class="position-name"><%= p.name %>(<%= p.employee_category.prefix unless p.employee_category_id.nil? %>)</div>
    <div class="position-edit"><%= link_to "Upravit", :action => "edit_position", :id=>p.id %></div>
    <div class="position-edit"><%= link_to "Smazat", {:action => "delete_position", :id=>p.id}, :confirm =>"Jste si jistí?" %></div>
  </li>
<% end %>
  <% unless @inactive_positions.empty? %>
      <li class="listheading"><div class="position-name"> Neaktivní Kvalifikace</div></li>
    <%- @inactive_positions.each do |c| -%>
      <li class="list<%=cycle('odd', 'even')%>">
        <div class="position-name"><%= c.name %> (<%=  c.employee_category.prefix unless c.employee_category_id.nil?  %>)</div>
        <div class="position-edit"><%= link_to "Upravit", {:action => "edit_position", :id=>c.id} %></div>
        <div class="position-edit"><%= link_to "Smazat", {:action => "delete_position", :id=>c.id},:confirm=>"Jste si jistí?" %></div>
      </li>
     <% end %>
     <% end %>
<% else %>
<p class="flash-msg"> Žádné pozice zaměstnanců nenalezeny.</p>
<% end %>
</ul>