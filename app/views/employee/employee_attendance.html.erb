<div id="content-header">
   <img src="/images/attendence/attendence.png" alt="" />
  <h1>Správa Docházky</h1>
  <h3>Dovolené a Docházka</h3>
  <div id="app-back-button">
   <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>


<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div id="box">
    <div class="link-box">
      <div class="link-heading"><%= link_to "Přidat typy Dovolené", :controller=>"employee_attendance", :action=>"add_leave_types"%></div>
      <div class="link-descr">Přidat nebo upravit typy dovolené pro zaměstnance.</div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "Prezenční listina", :controller=>"employee_attendances", :action=>"index"%></div>
      <div class="link-descr">Zapsat docházku.</div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "Report docházky", :controller=>"employee_attendance", :action=>"report" %></div>
      <div class="link-descr">Reporty docházky.</div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "Resetovat Dovolené", :controller=>"employee_attendance", :action=>"manual_reset" %></div>
      <div class="link-descr">Resetovat dovolené zaměstnanců.</div>
    </div>


  </div>


</div>