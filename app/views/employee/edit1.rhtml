<script src="/javascripts/jquery-1.3.2.min.js" type="text/javascript"></script>
<script src="/javascripts/jquery-ui.min.js" type="text/javascript"></script>

<script>
  $jq = jQuery.noConflict()
  $jq(document).ready(function() {
    $jq("#employee_joining_date").datepicker({dateFormat: 'yy-mm-dd'});
    $jq("#employee_date_of_birth").datepicker({dateFormat: 'yy-mm-dd'});
  });
</script>

<div id="content-header">
  <img src="/images/HR/show_hr.png" alt="" />
  <h1>Upravit údaje o zaměstnanci</h1>
  <h3>Všeobecné</h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>



  <% form_for :employee do |a| %>
    <%= error_messages_for  'employee' %>

    <div id="admission1_form">

      <div id="necessary-field-notification"> Pole označena  <span class="necessary-field">*</span> musí být vyplněna.</div>
      <span class="span-sub-heading">Všeobecné Údaje</span>
      <hr class="sub-heading"></hr>
      <div class="label-field-pair">
        <label for="employee_id">ID. Zaměstnance <span class="necessary-field">*</span> </label>
        <div class="text-input-bg"><%= a.text_field :employee_number, :value => @employee.employee_number %></div>
      </div>
      <hr class="label-underline"></hr>

      <div class="label-field-pair">
        <label for="employee_joining_date">Datum nástupu </label>
        <div class="text-input-bg"><%= calendar_date_select_tag 'employee[joining_date]', @employee.joining_date,
            :year_range => 25.years.ago..0.years.from_now %></div>
      </div>
      <hr class="label-underline"></hr>

      <div class="label-field-pair">
        <label for="employee_name">Jméno <span class="necessary-field">*</span> </label>
        <div class="text-input-bg"><%= a.text_field :first_name, :value => @employee.first_name %></div>
      </div>

      <hr class="label-underline"></hr>

      <div class="label-field-pair">
        <label for="employee_name">Příjmení <span class="necessary-field">*</span> </label>
        <div class="text-input-bg"><%= a.text_field :last_name, :value => @employee.last_name %></div>
      </div>

      <hr class="label-underline"></hr>

      <div class="label-field-pair">
        <label for="employee_department">Oddělení <span class="necessary-field">*</span></label>
        <div class="text-input-bg"><%= select :employee, :employee_department_id, @departments.map {|s| [s.name, s.id]}, :value => @employee.employee_department_id %></div>
      </div>

      <hr class="label-underline"></hr>

      <div class="label-field-pair">
        <label for="employee_category">Kategorie <span class="necessary-field">*</span> </label>
        <div class="text-input-bg"><%= select :employee, :employee_category_id, @categories.map { |s| [s.name, s.id] },
            {:prompt => "Select"},
            {:onChange => "#{remote_function(:url => {:action => "update_positions"}, :with => "'category_id='+value")}"}%></div>
      </div>

      <hr class="label-underline"></hr>

      <div class="label-field-pair">
        <label for="employee_position">Kvalifikace <span class="necessary-field">*</span></label>
        <div class="text-input-bg"><div id="positions1"> <%= render :partial => 'positions', :object => @positions %> </div></div>
      </div>

      <hr class="label-underline"></hr>

      <div class="label-field-pair">
        <label for="employee_grade">Zdravotní pojišťovna</span></label>
        <div class="text-input-bg"><%= select :employee, :employee_grade_id, @grades.map {|s| [s.name, s.id]}, :value => @employee.employee_grade_id %></div>
      </div>
	  <hr class="label-underline"></hr>

      <div class="label-field-pair">
        <label for="employee_job_title">Zaměstnání</label>
        <div class="text-input-bg"><%= a.text_field :job_title, :value => @employee.job_title %></div>
      </div>
      <hr class="label-underline"></hr>

      <div class="label-field-pair-text-area">
        <label for="employee_experience">Zkušenosti</label>
        <div class="textarea-input-bg"><%= a.text_area :experience_detail,:cols => 27, :rows => 5,:class => 'admission1-textarea' %></div>
      </div>
      <hr class="label-underline"></hr>
      <div class="label-field-pair">
        <label for="employee_total-experience">Celková Praxe</label>
        <div class="text-input-bg"><%= select :employee, :experience_year, (0..20),{:prompt=>"Rok"} %>
          <%= select :employee, :experience_month, (0..11),{:prompt=>"Měsíc"} %></div>
      </div>
      <hr class="label-underline"></hr>

      <div class="label_field_pair">
        <label class="label_for_employee_gender" for="master_student_gender">Pohlaví</label>
        <div class="employee_gender_value">
          <label class="label_for_gender" for="master_student_gender_true">Muž</label>
          <%= a.radio_button  "gender", "true", :checked => "checked" %>

          <label class="label_for_gender" for="master_student_gender_false">Žena</label>
          <%= a.radio_button  "gender", "false" %>
        </div>
      </div>
      <hr class="label-underline"></hr>


      <div class="label_field_pair">
        <label class="employee_status" for="employee_status">Stav</label>

        <label class="label_for_status" for="employee_status_true">Aktivní</label>
        <%= a.radio_button  "status", "true", :checked => "checked" %>

        <label class="label_for_status" for="employee_status_false">Neaktivní</label>
        <%= a.radio_button  "status", "false" %>
      </div>

    </div>
    <%= submit_tag "► Aktualizovat", :class => "submit_button" %>
  <% end %>
</div>

